<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLight"
    tools:context=".ForgotPassword">
    <ImageView
        android:id="@+id/topLgo"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/red_drop_logo_dark"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/secondLgo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/topLgo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blood_cartoon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/secondLgo"
        android:background="@drawable/top_corner_bg_primary">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textColor="@color/primaryLight"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/primaryLight"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/red_drop_logo_white"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColorHint="#595959"
                android:textColor="@color/black"
                android:hint="Your Email / Phone Number"
                android:background="@drawable/lgoin_btn_bg"/>
            <Button
                android:id="@+id/reset"
                android:textStyle="bold"
                android:background="@drawable/lgoin_btn_bg"
                android:textColor="@color/primaryColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go Login page"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:id="@+id/login"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>