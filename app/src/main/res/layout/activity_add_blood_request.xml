<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLight"
    tools:context=".BloodRequest.AddBloodRequestActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/red_drop_logo_dark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request For Blood "
                android:textColor="@color/primaryColor"
                android:textSize="25sp"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"/>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Blood Group"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"/>
                <HorizontalScrollView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/bloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@drawable/radio_btn_text_color"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="A+"/>
                        <RadioButton
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textColor="@drawable/radio_btn_text_color"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="A-"/>
                        <RadioButton
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textColor="@drawable/radio_btn_text_color"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="B+"/>
                        <RadioButton
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textColor="@drawable/radio_btn_text_color"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="B-"/>
                        <RadioButton
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textColor="@drawable/radio_btn_text_color"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="O+"/>
                        <RadioButton
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textColor="@drawable/radio_btn_text_color"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="O-"/>
                        <RadioButton
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textColor="@drawable/radio_btn_text_color"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="AB+"/>
                        <RadioButton
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:textColor="@drawable/radio_btn_text_color"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="AB-"/>
                    </RadioGroup>
                </HorizontalScrollView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Image"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:weightSum="5"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_upload"
                        android:drawableTint="@color/black"
                        android:paddingStart="10dp"
                        android:background="@drawable/secondary_btn"
                        android:textColor="@color/black"
                        android:text="Upload"
                        android:id="@+id/upload"
                        android:layout_weight="3"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/image"/>

                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/hospitalName"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:hintTextColor="#090909"
                    android:textColorHint="#171717"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:placeholderTextColor="#595555"
                    app:placeholderText="Enter Location / Hospital Name"
                    android:layout_weight="1"
                    android:hint="Location / Hospital Name">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:background="@drawable/input_bg"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/message"
                    android:maxLines="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:hintTextColor="#090909"
                    android:textColorHint="#171717"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:placeholderTextColor="#595555"
                    app:placeholderText="Enter Request Message"
                    android:layout_weight="1"
                    android:hint="Request Message">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="15sp"
                        android:maxLines="2"
                        android:maxLength="50"
                        android:background="@drawable/input_bg"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fname"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    app:hintTextColor="#090909"
                    android:textColorHint="#171717"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:placeholderTextColor="#595555"
                    app:placeholderText="Enter First Name"
                    android:layout_weight="1"
                    app:boxStrokeErrorColor="@color/black"
                    android:hint="First Name">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="15sp"
                        android:background="@drawable/input_bg"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lname"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    app:hintTextColor="#090909"
                    android:textColorHint="#171717"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:placeholderTextColor="#595555"
                    app:placeholderText="Enter Last Name"
                    android:hint="Last Name">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:paddingLeft="15dp"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="15sp"
                        android:background="@drawable/input_bg"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cnumber"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:hintTextColor="#090909"
                android:textColorHint="#171717"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:counterMaxLength="10"
                app:prefixText="+880"
                app:prefixTextColor="#000000"
                app:placeholderText="13XX XXXXXX"
                app:placeholderTextColor="#595555"
                android:hint="Contact Number">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:background="@drawable/input_bg"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enumber"
                app:counterMaxLength="10"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:hintTextColor="#090909"
                android:textColorHint="#171717"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:prefixText="+880"
                app:prefixTextColor="#000000"
                app:placeholderText="13XX XXXXXX"
                app:placeholderTextColor="#595555"
                android:hint="Emergency Number">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:background="@drawable/input_bg"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_btn"
                    android:textColor="@color/white"
                    android:text="Submit"
                    android:layout_marginRight="10dp"
                    android:id="@+id/submit"
                    android:textSize="16sp" />
                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/third_btn"
                    android:textColor="@color/black"
                    android:text="Back"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/back"
                    android:onClick="back"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>